@model IEnumerable<TCC_2._0.Models.PROTIPO>

@{
    ViewBag.Title = "Criar";
}

<link href="~/css/pgalerta.css" rel="stylesheet"/>

<h1>Criar</h1>

<div>
    <form action="/ProTipo/Criar" enctype="multipart/form-data" method="post">



        <div>
            <h5>Produto: </h5>
            <select id="produto" name="produto">

                @foreach (var item in ViewBag.listaProduto)
                {
                    <option value="@item.PROID">@item.PRODESCRICAO</option>
                }

            </select>

        </div>

        <div>
            <h5>Tipo: </h5>
            <select id="tipo" name="tipo">

                @foreach (var item in ViewBag.listaTipo)
                {
                    <option value="@item.TIPID">@item.TIPNOME</option>
                }

            </select>

        </div>

        @*<div>
            <class ="form-group">
                <h5>Máximo</h5>
                <input type="number" class="form-control"
                       id="maximo" name="maximo" value="0" min="0"
                       required />
        </div>*@

        <div>
            <class ="form-group">
                <h5>Mínimo</h5>
                <input type="number" class="form-control"
                       id="minimo" name="minimo" value="0" min="0"
                       required />
        </div>

        <div>
            <class ="form-group">
                <h5>Estoque</h5>
                <input type="number" class="form-control"
                       id="estoque" name="estoque" value="0" min="0"
                       required />
        </div>

        <div class="form-group">
            <h5>Imagem</h5>
            <input type="file" class="form-control"
                   id="imagem" name="imagem" />
        </div>

        <div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a href="/protipo/index" class="btn btn-primary">Voltar</a>

        </div>



    </form>
</div>
