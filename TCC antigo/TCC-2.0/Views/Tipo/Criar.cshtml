@model IEnumerable<TCC_2._0.Models.TIPO>

@{
    ViewBag.Title = "Criar";
}

<link href="~/css/funcaoCrud.css" rel="stylesheet"/>

<div class="tudo">
    <div class="create">
      <form action="/Tipo/Criar" method="post">
          <div>
              <h2>Criar um novo Tipo</h2>
              <br />
              <h5>Descrição</h5>
          </div>

          <div class="descricao-create">
              <class ="form-group">
                  
                  <input type="text" class="form-control"
                         maxlength="100" id="descricao" name="descricao"
                         required
                  />

          </div>
        
       
          <div>
              <button type="submit" class="btn btn-success">Salvar</button>
              <a href="/Tipo/index" class="btn btn-primary">Voltar</a>

          </div>
     </form>
  </div>
</div>
  

