@model TCC_2._0.Models.CATEGORIA

@{
    ViewBag.Title = "Deletar";
}

    <link href="~/css/funcaoCrud.css" rel="stylesheet"/>

<div class="tudo">
    <div class="delete">
        <form action="/Categorias/ConfirmeDelete?id=@Model.CATID" method="post">
            <div>
                <h2>Deletando</h2>
                 <br />
                 <h5>Descrição: </h5>
            </div>
            <div class="descricao-delete">
                <class ="form-group">
                
                    <label>@Model.CATDESCRICAO</label>
            </div>

            <br />

            <div>
                <p><a href="/Categorias/index" class="btn btn-primary">Voltar &raquo;</a></p>
                <button type="submit" class="btn btn-danger">Deletar</button>
            </div>

        </form>
    </div>
</div>
