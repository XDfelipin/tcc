@model  TCC_2._0.Models.PRODUTO


@{
    ViewBag.Title = "Editar";
}

<link href="~/css/pgalerta.css" rel="stylesheet"/>

<h1>Editando</h1>

<div>
    <form action="/Produto/Editar?id=@Model.PROID" method="post">
        
        <div>
            <class ="form-group">
                <h5>Descrição</h5>
                <input type="text" class="form-control"
                       maxlength="100" id="descricao" name="descricao"
                       value="@Model.PRODESCRICAO"
                       required />
        </div>

        <div>
            <h5>Categoria: </h5>
            <select type="text" class="form-control" id="categoria" name="categoria">

                @foreach (var item in ViewBag.listaCategoria)
                {
                    <option value="@item.CATID">@item.CATDESCRICAO</option>
                }

            </select>

        </div>

        <div class="form-group">
            <h5>Imagem</h5>
            <input type="file" class="form-control"
                   id="imagem" name="imagem" re />
        </div>

        <div>

            <div>
                <button type="submit" class="btn btn-success">Salvar</button>
                <a href="/produto/index" class="btn btn-primary">Voltar</a>

            </div>

        </div>
    </form>
</div>
